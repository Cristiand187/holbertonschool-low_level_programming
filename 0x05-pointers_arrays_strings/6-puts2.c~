#include <stdio.h>
#include <string.h>
#include "holberton.h"

/**
 * puts2 - xxx
 *
 * @str: yy
 * Return: Description of the returned value
 */


void puts2(char *str)
{

	int len = strlen(str), l = 0;

	for  (l = 0; l <=  len; l++)
	{
		if ((l % 2) == 0)
			_putchar(str[l]);
	}
	_putchar('\n');
}
