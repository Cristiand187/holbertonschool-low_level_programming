#include "holberton.h"
#include <stdio.h>

/**
 * print_chessboard - this function that fills memory with a constant byte.
 *
 * @a: Parameter bytes of the memory area pointed.
 *
 * Return: Returns a pointer to the memory area
 *
 */

void print_chessboard(char (*a)[8])
{
	int j = 0, i = 0;

	while (i <= 7)
	{
		j = 0;
		while (j <= 7)
		{
			_putchar(a[i][j]);
			j++;
		}
		_putchar('\n');
		i++;
	}
}
